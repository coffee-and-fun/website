{% assign showDonation = showDonation | default: false %}
{% assign showTriviaApp = showTriviaApp | default: false %}
{% assign showMysteryApp = showMysteryApp | default: false %}
{% assign showDiscordApp = showDiscordApp | default: true %}
{% assign showMenu = showMenu | default: true %}
{% assign showKeyboardModal = showKeyboardModal | default: false %}
{% assign showInstantApp = showInstantApp | default: false %}
{% assign showProcrastinot = showProcrastinot | default: false %}
{% assign showFun = showFun | default: false %}
{% assign showMiddleBadge = showMiddleBadge | default: false %}
{% assign showMiddleBadgeWithText = showMiddleBadgeWithText | default: false %}
{% assign showSpoilers = showSpoilers | default: false %}
{% assign showTicker = showTicker | default: false %}

{% if showTicker %}
  {% include ticker.liquid %}
{% endif %}

<header>
  <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-2 focus:left-2 focus:z-50 focus:px-4 focus:py-2 focus:rounded-lg focus:text-white focus:text-sm focus:font-semibold focus:outline-none focus:ring-2 focus:ring-offset-2" style="background-color: #a36942; --tw-ring-color: #a36942;">
    Skip to main content
  </a>
  <nav class="mx-auto flex max-w-7xl items-center justify-between px-4 sm:px-6 lg:px-8 py-4" aria-label="Global">

    <!-- Logo only, no text -->
    <a href="/" class="group" aria-label="Coffee & Fun Homepage">
      <img
        alt="Coffee & Fun LLC logo"
        src="/assets/images/coffee-and-fun-logo-dark.png"
        width="80" height="80"
        class="h-16 w-16 sm:h-20 sm:w-20 group-hover:scale-105 transition-transform duration-200"
        decoding="async"
        loading="lazy"
      />
    </a>

    <!-- Right side actions â€” all circles -->
    <div class="flex items-center gap-2.5">

      {% if showFun %}
        <button
          class="btn btn-warning btn-circle btn-sm sm:btn-md hover:scale-110 transition-all duration-200 touch-manipulation"
          onclick="applyCursorEffect()"
          title="Fun cursor effect"
          aria-label="Activate party cursor effect"
        >
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 -960 960 960" class="w-5 h-5" fill="currentColor" aria-hidden="true">
