      {% if showMenu %}
        <button
          class="btn btn-info btn-circle btn-sm sm:btn-md hover:scale-110 transition-all duration-200 touch-manipulation"
          onclick="my_modal_site_menu.showModal()"
          title="Open main menu"
          aria-label="Open site navigation menu"
          aria-controls="my_modal_site_menu"
        >
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 -960 960 960" class="w-5 h-5" fill="currentColor" aria-hidden="true">
            <path d="M120-240v-80h720v80H120Zm0-200v-80h720v80H120Zm0-200v-80h720v80H120Z"/>
          </svg>
        </button>
