  <script>
    const { createApp } = Vue;

    createApp({
      data() {
        return {
          gameState: 'playing', // 'playing', 'won', 'lost'
          attempts: 0,
          maxAttempts: 4,
          currentGuess: null,
          feedback: null,
          copied: false,
          
          // Daily puzzles - indexed by day
          puzzles: [
            {
              clues: ['‚òï', 'üò¥', 'üåÖ', 'üì∞'],
              answer: 'Morning Mood',
              description: 'That cozy, sleepy feeling of waking up to a new day!',
              options: ['Morning Mood', 'Party Time', 'Study Session', 'Adventure Awaits']
            },
            {
              clues: ['üéâ', 'ü™©', 'üé∂', 'üíÉ'],
              answer: 'Party Time',
              description: 'Time to dance, celebrate, and let loose!',
              options: ['Lazy Sunday', 'Party Time', 'Deep Thoughts', 'Workout Energy']
            },
            {
              clues: ['üòå', 'üõãÔ∏è', 'üì∫', 'üçø'],
              answer: 'Cozy Vibes',
              description: 'Chillin\' at home, totally relaxed and comfy!',
              options: ['Busy Bee', 'Cozy Vibes', 'Travel Bug', 'Social Butterfly']
            },
            {
              clues: ['üí™', 'üèÉ', 'üî•', '‚ö°'],
              answer: 'Workout Energy',
              description: 'Pumped up and ready to crush those fitness goals!',
              options: ['Sleepy Time', 'Workout Energy', 'Foodie Feels', 'Chill Mode']
            },
            {
              clues: ['üìö', 'ü§ì', '‚úçÔ∏è', 'üí°'],
              answer: 'Study Session',
              description: 'Focused, motivated, and learning something new!',
              options: ['Gaming Night', 'Study Session', 'Beach Day', 'Movie Marathon']
            },
            {
              clues: ['üåà', '‚òÄÔ∏è', 'ü¶ã', 'üå∏'],
              answer: 'Happy Vibes',
              description: 'Everything is awesome and the sun is shining!',
              options: ['Rainy Day Blues', 'Happy Vibes', 'Spooky Season', 'Winter Wonderland']
            },
            {
              clues: ['üéÆ', 'üïπÔ∏è', 'üèÜ', 'üëæ'],
              answer: 'Gaming Night',
              description: 'Level up and game on till the break of dawn!',
              options: ['Cooking Time', 'Gaming Night', 'Meditation Mode', 'Shopping Spree']
            }
          ]
        };
      },

      computed: {
        puzzleNumber() {
          // Get day of year for puzzle number
          const now = new Date();
          const start = new Date(now.getFullYear(), 0, 0);
          const diff = now - start;
          const oneDay = 1000 * 60 * 60 * 24;
          return Math.floor(diff / oneDay);
        },

        currentPuzzle() {
          // Cycle through puzzles based on day
          return this.puzzles[this.puzzleNumber % this.puzzles.length];
        }
      },

      mounted() {
        this.loadGameState();
        this.checkIfNewDay();
      },

      methods: {
        makeGuess(option) {
          if (this.gameState !== 'playing') return;

          this.currentGuess = option;
          this.attempts++;

          if (option === this.currentPuzzle.answer) {
            this.gameState = 'won';
            this.saveGameState();
            this.showConfetti();
          } else {
            if (this.attempts >= this.maxAttempts) {
              this.gameState = 'lost';
              this.feedback = {
                type: 'wrong',
                message: 'Out of tries! üò¢'
              };
              this.saveGameState();
            } else {
              this.feedback = {
                type: 'wrong',
                message: 'Not quite! Try again! ü§î'
              };
              setTimeout(() => {
                this.feedback = null;
              }, 2000);
            }
          }
        },

        getButtonClass(option) {
          const base = 'border-2 ';
          
          if (this.currentGuess === option && option !== this.currentPuzzle.answer) {
            return base + 'bg-red-100 border-red-400 text-red-700';
          }
          
          return base + 'bg-gradient-to-br from-purple-100 to-pink-100 border-purple-300 hover:from-purple-200 hover:to-pink-200 text-gray-800 hover:border-purple-400';
        },

        getResultEmoji() {
          if (this.attempts === 1) return 'üèÜ';
          if (this.attempts === 2) return 'üåü';
          if (this.attempts === 3) return '‚ú®';
          return 'üí´';
        },

        shareResults() {
          const guessBlocks = 'üü™'.repeat(this.attempts) + '‚¨ú'.repeat(this.maxAttempts - this.attempts);
          const statusEmoji = this.gameState === 'won' ? '‚úÖ' : '‚ùå';
          
          const shareText = `VIBE CHECK ‚ú® #${this.puzzleNumber}

${statusEmoji} ${this.attempts}/${this.maxAttempts}

${guessBlocks}

Can you guess today's vibe?
coffeeandfun.com/vibe-check`;

          navigator.clipboard.writeText(shareText).then(() => {
            this.copied = true;
            setTimeout(() => {
              this.copied = false;
            }, 2000);
          }).catch(() => {
            // Fallback for older browsers
            alert('Share text:\n\n' + shareText);
          });
        },

        showConfetti() {
          const colors = ['#a855f7', '#ec4899', '#3b82f6', '#10b981', '#f59e0b'];
          for (let i = 0; i < 50; i++) {
            setTimeout(() => {
              const confetti = document.createElement('div');
              confetti.className = 'confetti';
              confetti.style.left = Math.random() * 100 + '%';
              confetti.style.background = colors[Math.floor(Math.random() * colors.length)];
              confetti.style.animationDelay = Math.random() * 0.5 + 's';
              document.body.appendChild(confetti);
              
              setTimeout(() => confetti.remove(), 3000);
            }, i * 30);
          }
        },

        saveGameState() {
          const state = {
            puzzleNumber: this.puzzleNumber,
            gameState: this.gameState,
            attempts: this.attempts,
            currentGuess: this.currentGuess
          };
          localStorage.setItem('vibeCheckGame', JSON.stringify(state));
        },

        loadGameState() {
          const saved = localStorage.getItem('vibeCheckGame');
          if (saved) {
            const state = JSON.parse(saved);
            // Only load if it's today's puzzle
            if (state.puzzleNumber === this.puzzleNumber) {
              this.gameState = state.gameState;
              this.attempts = state.attempts;
              this.currentGuess = state.currentGuess;
            }
          }
        },

        checkIfNewDay() {
          // Check every minute if it's a new day
          setInterval(() => {
            const saved = localStorage.getItem('vibeCheckGame');
            if (saved) {
              const state = JSON.parse(saved);
              if (state.puzzleNumber !== this.puzzleNumber) {
                // New day! Reset game
                this.resetGame();
              }
            }
          }, 60000);
        },

        resetGame() {
          this.gameState = 'playing';
          this.attempts = 0;
          this.currentGuess = null;
          this.feedback = null;
          this.copied = false;
          localStorage.removeItem('vibeCheckGame');
        }
      }
    }).mount('#app');
  </script>
