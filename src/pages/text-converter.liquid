                    <h3 class="font-bold mb-3">Quick Tools</h3>
                    <div class="grid grid-cols-2 md:grid-cols-4 gap-3">
                        <button 
                            @click="removeExtraSpaces"
                            class="btn btn-sm btn-ghost"
                            :disabled="!inputText"
                        >
                            Remove Extra Spaces
                        </button>
                        
