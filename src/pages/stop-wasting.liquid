			{
				"@context": "https://schema.org",
				"@type": "WebPage",
				"name": "ProcrastiNOT - Website Blocked",
				"description": "Blocked page displayed by ProcrastiNOT when users attempt to access time-wasting websites",
				"url": "https://www.coffeeandfun.com/stop-wasting",
