    <meta name="twitter:image" content="/assets/images/social/pages/blog.png" />
    <meta name="twitter:image:alt" content="Coffee & Fun Blog - Latest Updates and Guides" />
    <meta name="twitter:domain" content="coffeeandfun.com" />
    <meta name="twitter:url" content="/blog/" />
    
    <!-- PWA Meta Tags -->
    <link rel="manifest" href="/assets/images/social/site.webmanifest" />
    <meta name="theme-color" content="#fef5ec" />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="default" />
    <meta name="apple-mobile-web-app-title" content="Coffee & Fun Blog" />
    
    <!-- Structured Data -->
    <script type="application/ld+json">
    {
        "@context": "https://schema.org",
        "@graph": [
            {
                "@type": "WebSite",
                "name": "Coffee & Fun",
                "url": "https://www.coffeeandfun.com",
                "potentialAction": {
                    "@type": "SearchAction",
                    "target": "/search?q={search_term_string}",
                    "query-input": "required name=search_term_string"
                }
            },
            {
                "@type": "Blog",
                "@id": "/blog/",
                "name": "Coffee & Fun Blog",
                "description": "Official blog featuring research, announcements, guides, and updates from Coffee & Fun LLC",
                "url": "/blog/",
                "image": "/assets/images/social/pages/blog.png",
                "publisher": {
                    "@type": "Organization",
                    "name": "Coffee & Fun LLC",
                    "logo": {
                        "@type": "ImageObject",
                        "url": "/assets/images/coffee-and-fun-logo-dark.png",
                        "width": 180,
                        "height": 180
                    },
                    "sameAs": [
                        "https://x.com/bycoffeeandfun"
                    ]
                },
                "blogPost": {
                    "@type": "BlogPosting",
                    "headline": "Latest Updates from Coffee & Fun",
                    "description": "Discover our latest product releases, guides, and announcements"
                }
            },
            {
                "@type": "Organization",
                "name": "Coffee & Fun LLC",
                "url": "https://www.coffeeandfun.com",
                "logo": {
                    "@type": "ImageObject",
                    "url": "/assets/images/coffee-and-fun-logo-dark.png",
                    "width": 180,
                    "height": 180
                },
                "description": "Apps, games, and digital experiences by Coffee & Fun LLC",
                "sameAs": [
                    "https://x.com/bycoffeeandfun"
                ]
            }
        ]
    }
    </script>
    
    {% bundledCss %}
    {% include sketch-styles.liquid %}

    <style>
        @font-face {
            font-family: 'Pacifico';
            font-style: normal;
            font-weight: 400;
            font-display: swap;
            src: url('/assets/fonts/Pacifico-Regular.ttf') format('truetype');
        }
        .brand-heading {
            font-family: 'Pacifico', cursive;
            color: #a36942;
            text-shadow: 1.5px 2.5px 0px #fd6155;
        }
        @media (min-width: 640px) {
            .brand-heading { text-shadow: 2px 3.5px 0px #fd6155; }
        }
        @media (min-width: 1024px) {
            .brand-heading { text-shadow: 3px 5px 0px #fd6155; }
        }

        .filter-tab {
            padding: 0.5rem 1.25rem;
            border-radius: 9999px;
            font-size: 0.875rem;
            font-weight: 500;
            border: 1.5px solid #d6d3d1;
            color: #78716c;
            background: transparent;
            cursor: pointer;
            transition: all 0.2s;
            white-space: nowrap;
        }
        .filter-tab:hover {
            border-color: #a36942;
            color: #a36942;
        }
        .filter-tab.active {
            background-color: #a36942;
            border-color: #a36942;
            color: white;
        }

        .blog-card-item {
            transition: none;
        }
        .blog-card-item.hidden-card {
            display: none;
        }

        .search-input:focus {
            box-shadow: 0 0 0 3px rgba(163, 105, 66, 0.2);
            border-color: #a36942;
        }
    </style>
    
    <!-- Service Worker Registration -->
    <script>
        if ('serviceWorker' in navigator) {
            navigator.serviceWorker.getRegistrations().then((registrations) => {
                for (const registration of registrations) {
                    registration.unregister().then(() => {
                        console.log('ðŸ§¹ Old service worker unregistered');
                    });
                }
                
                // After clearing, register the new one
                navigator.serviceWorker.register('/service-worker.js')
                    .then(() => console.log('âœ… New service worker registered'))
                    .catch((err) => console.log('Service worker error:', err));
            });
        }
    </script>
    
    {% include scripts.html %}
</head>

<body>
    {% assign showFun = true %}
    {% assign showMiddleBadgeWithText = true %}
    {% include header.liquid %}

    <main id="main-content">

        <!-- Hero -->
        <section class="relative mx-auto max-w-5xl px-4 sm:px-6 lg:px-8 pt-20 sm:pt-28 pb-10 sm:pb-14 text-center overflow-visible">
            <h1 class="brand-heading text-4xl sm:text-5xl lg:text-6xl leading-[1.15] sm:leading-[1.15] lg:leading-[1.15] mb-5">
                Our Blog
            </h1>
            <p class="text-lg sm:text-xl text-stone-500 max-w-2xl mx-auto leading-relaxed">
                Updates, guides, and announcements from Coffee & Fun.
            </p>

            <!-- Sketch: "fresh off the press" with curly arrow -->
