    <main id="main-content" class="mx-auto max-w-7xl mb-12">
   
            <div class="mx-auto max-w-7xl lg:px-8">
             
                    <div class="mx-auto grid max-w-xl grid-cols-1">
                        <div class="text-base  lg:col-span-8">
                        
