    <style>
        .coffee-steam {
            font-size: 3rem;
            font-weight: bold;
            color: #5c3d2e;
            position: relative;
            display: inline-block;
        }
        
        .coffee-steam::after {
            content: "‚òÅ ‚òÅ ‚òÅ";
            position: absolute;
            top: -40px;
            left: 20px;
            font-size: 1.5rem;
            animation: steam 3s infinite ease-in-out;
            opacity: 0.6;
        }
        
        @keyframes steam {
            0% { transform: translateY(0) scale(0.8); opacity: 0.5; }
            50% { transform: translateY(-20px) scale(1); opacity: 1; }
            100% { transform: translateY(-40px) scale(1.2); opacity: 0; }
        }
        
        .latte-text {
            font-size: 3rem;
            font-weight: bold;
            background: linear-gradient(45deg, #4b2e2e, #d2b48c, #fff8e7);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }
        
        .coffee-stain {
            font-size: 3rem;
            color: #3e2723;
            text-shadow: 
                0 0 5px #6f4e37,
                0 0 15px #a1887f,
                0 0 30px #d7ccc8;
        }
        
        .drip {
            font-size: 3rem;
            font-weight: bold;
            color: #6f4e37;
            position: relative;
        }
        
        .drip::after {
            content: '';
            position: absolute;
            left: 40%;
            bottom: -10px;
            width: 6px;
            height: 15px;
            background: #4b2e2e;
            border-radius: 50%;
            animation: drip 2s infinite;
        }
        
        @keyframes drip {
            0% { transform: translateY(0); opacity: 1; }
            70% { transform: translateY(20px); opacity: 1; }
            100% { transform: translateY(40px); opacity: 0; }
        }
    </style>
    
