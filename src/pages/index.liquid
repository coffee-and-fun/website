	<script type="application/ld+json">
			{
				"@context": "http://schema.org/",
				"@type": "WebSite",
				"url": "https://www.coffeeandfun.com",
				"potentialAction": {
					"@type": "SearchAction",
					"target": "{search_term_string}",
					"query-input": "required name=search_term_string"
				}
			}
		</script>

	{% bundledCss %}
	<script>
 if ('serviceWorker' in navigator) {
    navigator.serviceWorker.register('/service-worker.js')
      .then(() => console.log('✅ Service worker registered'))
      .catch((err) => console.log('Service worker error:', err));
  }
	</script>


	{% include scripts.html %}
</head>

<body>

	{% assign showFun = true %}
	{% assign showMiddleBadgeWithText = true %}
	{% include header.liquid %}


	<main id="main-content" class="mx-auto max-w-7xl">
		<div class="mb-16 mt-16 sm:mb-24 sm:mt-24 sm:px-8">


		<div class="relative">
  <div
  class="absolute inset-2 bottom-0 rounded-4xl ring-1 ring-black/5 ring-inset bg-gradient-to-br from-[#fcd683] via-[#f7c4ba] to-[#e25440]"
  ></div>
  <div class="relative px-6 lg:px-8">
    <div class="mx-auto max-w-2xl lg:max-w-7xl">

      <div class="pt-16 pb-24 sm:pt-24 sm:pb-32 md:pt-32 md:pb-48">
	
        <h1
          class="font-display text-5xl font-medium tracking-tight text-balance text-gray-950 sm:text-6xl/[0.8] md:text-7xl/[0.8]"
        >
		Crafting Software, One Brew at a Time

        </h1>
        <p
          class="mt-8 max-w-xl text-xl/7 font-medium text-gray-950/75 sm:text-2xl/8"
        >
		Coffee & Fun LLC is a modern development studio creating award-winning tools that blend thoughtful design with everyday usefulness.
		<br> 	<br>
From productivity to accessibility, we build apps that help people do more, faster, easier, and with a little joy baked in.
        </p>
        <div class="mt-12 flex flex-col gap-x-6 gap-y-4 sm:flex-row">
          <button
            class=" inline-flex items-center justify-center px-4 btn btn-lg  btn-neutral	 "
           

			onclick="my_modal_site_menu.showModal()"
			title="Open the contact support form" 
			aria-label="Open the contact support form"
			aria-controls="my_modal_site_menu" 
			role="menuitem"
            >Everything</button
          ><a
            class="relative inline-flex items-center justify-center px-4 btn btn-lg btn-dash btn-neutral	  "

            href="#apps"
            >See Apps</a
          >
        </div>
      </div>
    </div>
  </div>
</div>




			<div class="mx-auto max-w-7xl">


			
				<div class="relative">



				
					<div class="mx-auto max-w-7xl">
				

				
						<div class="max-w-8xl text-base mx-auto my-8" id="apps">
							<div class="card my-24">
							  <div class="my-8">
								<h2 class="card-title mb-10 text-4xl font-medium tracking-tighter text-pretty">Our Family of Apps</h2>
						  
							
							
								  <div class="flex overflow-x-auto snap-x snap-mandatory scroll-smooth gap-6 px-4 pb-8 ">
									{% for app in apps.apps %}
									<div class="shrink-0 snap-start w-[20rem]">
									  <a class="min-h-[30rem] flex flex-col justify-between h-full card card-compact bg-base-100 shadow-md transition-all duration-200 hover:-translate-y-1 rounded-4xl"
										target="_blank" href="{{ app.link }}">
										<figure class="px-4 pt-4">
										  <img loading="lazy" src="{{ app.image }}"
											class="rounded-2xl border border-base-content border-opacity-5 bg-base-300"
											alt="{{ app.name }}" />
										</figure>
										<div class="card-body flex flex-col justify-between flex-grow">
										  <div>
											<h2 class="card-title">{{ app.name }}</h2>
											<p class="text-base">{{ app.description }}</p>
										  </div>
										  <div class="flex flex-wrap gap-2 mt-6">
											{% for platform in app.platform %}
											<div class="badge badge-neutral gap-2
											  {% if platform == 'Edge' %}badge-info
											  {% elsif platform == 'Chrome' %}badge-error
											  {% elsif platform == 'macOs' %}badge-accent
											  {% elsif platform == 'Safari' %}badge-secondary
											  {% elsif platform == 'Firefox' %}badge-warning
											  {% else %}badge-neutral{% endif %}">
											  {{ platform }}
											</div>
											{% endfor %}
										  </div>
										</div>
									  </a>
									</div>
									{% endfor %}
						  
									{% for app in apps.opensource %}
									<div class="shrink-0 snap-start w-[20rem]">
									  <a class="min-h-[30rem] flex flex-col justify-between h-full card card-compact bg-base-100 shadow-md transition-all duration-200 hover:-translate-y-1 rounded-4xl"
										target="_blank" href="{{ app.link }}">
										<figure class="px-4 pt-4">
										  <img loading="lazy" src="{{ app.image }}"
											class="rounded-2xl border border-base-content border-opacity-5 bg-base-300"
											alt="{{ app.name }}" />
										</figure>
										<div class="card-body flex flex-col justify-between flex-grow">
										  <div>
											<h2 class="card-title">{{ app.name }}</h2>
											<p class="text-base">{{ app.description }}</p>
										  </div>
										  <div class="flex flex-wrap gap-2 mt-6">
											{% for platform in app.platform %}
											<div class="badge badge-neutral gap-2
											  {% if platform == 'Edge' %}badge-info
											  {% elsif platform == 'Chrome' %}badge-error
											  {% elsif platform == 'macOs' %}badge-accent
											  {% elsif platform == 'Safari' %}badge-secondary
											  {% elsif platform == 'Firefox' %}badge-warning
											  {% else %}badge-neutral{% endif %}">
											  {{ platform }}
											</div>
											{% endfor %}
										  </div>
										</div>
									  </a>
									</div>
									{% endfor %}
								  </div>
							
							  </div>
							</div>
						</div>
						  



						<div class="max-w-8xl text-base mx-auto my-8" id="graveyard">
							<div class="card my-24">
							  <div class="my-8">
								<h2 class="card-title mb-10 text-4xl font-medium tracking-tighter text-pretty">⚰️ The Graveyard</h2>
						  
							
							
								  <div class="flex overflow-x-auto snap-x snap-mandatory scroll-smooth gap-6 px-4 pb-8 ">
									{% for app in apps.graveyard %}
									<div class="shrink-0 snap-start w-[20rem]">
									  <a class="min-h-[30rem] flex flex-col justify-between h-full card card-compact bg-base-100 shadow-md transition-all duration-200 hover:-translate-y-1 rounded-4xl"
										target="_blank" href="{{ app.link }}">
										<figure class="px-4 pt-4">
										  <img loading="lazy" src="{{ app.image }}"
											class="rounded-2xl border border-base-content border-opacity-5 bg-base-300"
											alt="{{ app.name }}" />
										</figure>
										<div class="card-body flex flex-col justify-between flex-grow">
										  <div>
											<h2 class="card-title">{{ app.name }}</h2>
											<p class="text-base">{{ app.description }}</p>
										  </div>
										  <div class="flex flex-wrap gap-2 mt-6">
											{% for platform in app.platform %}
											<div class="badge badge-neutral gap-2
											  {% if platform == 'Edge' %}badge-info
											  {% elsif platform == 'Chrome' %}badge-error
											  {% elsif platform == 'macOs' %}badge-accent
											  {% elsif platform == 'Safari' %}badge-secondary
											  {% elsif platform == 'Firefox' %}badge-warning
											  {% else %}badge-neutral{% endif %}">
											  {{ platform }}
											</div>
											{% endfor %}
										  </div>
										</div>
									  </a>
									</div>
									{% endfor %}
						  
								  </div>
							
							  </div>
							</div>
						</div>


			



						<div class="max-w-8xl text-base  mx-auto mt-12" id="contact">

							<div class="my-8">
								<h2 class="card-title mb-10 text-4xl font-medium tracking-tighter text-pretty"> 👋 Support & Help
								</h2>

								<div class="grid grid-cols-1 md:grid-cols-2 md:gap-8">
									<div class="card my-8 bg-base-100 shadow-md rounded-4xl">
										<div class="card-body">
											<h2 class="card-title mb-4 text-2xl">Support ✉️</h2>

											<p class="mb-4 text-lg text-black">
												For
												<a href="https://www.helperbird.com"
													title="Visit Helperbird for accessible web browsing tools"
													target="_blank" class="text-blue-500 hover:underline">Helperbird</a>
												please email us at
												<a href="mailto:support@helperbird.com"
													class="text-blue-500 hover:underline"
													title="Email Helperbird support">support@helperbird.com</a>.
											</p>
											<p class="text-lg text-black">
												For all other apps please email us at
												<a href="mailto:hello@coffeeandfun.com"
													class="text-blue-500 hover:underline"
													title="Email Coffee & Fun">hello@coffeeandfun.com</a>.
											</p>

											<p class="text-lg text-black">
												You can also use this form
												<button onclick="my_modal_supports.showModal()"
													title="Open the contact support form"
													class="text-blue-500 hover:underline"
													aria-label="Open the contact support form"
													aria-controls="my_modal_supports" role="button">Contact Form</button>.
											</p>
										</div>
									</div>


									<div class="card my-8 bg-base-100 shadow-md rounded-4xl">
										<div class="card-body">
											<h2 class="card-title mb-4 text-2xl">Contact Us ✉️</h2>

											<p class="text-lg text-black">
												For business inquiries, please email us at
												<a href="mailto:hello@coffeeandfun.com"
													class="text-blue-500 hover:underline"
													title="Email Coffee & Fun">hello@coffeeandfun.com</a>.
											</p>
										</div>
									</div>
								</div>

							</div>
						</div>






					</div>
				</div>
			</div>
		</div>
	
		{% include discord.liquid %}



	</main>


	{% include modals.liquid %}


	{% include  footer.liquid %}



</body>

</html>