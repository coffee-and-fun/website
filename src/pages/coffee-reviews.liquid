				"@graph": [
					{
						"@type": "WebSite",
						"@id": "https://www.coffeeandfun.com/#website",
						"name": "Coffee & Fun",
						"description": "Apps, games, and digital experiences by Coffee & Fun LLC",
						"url": "https://www.coffeeandfun.com/",
						"publisher": {
							"@id": "https://www.coffeeandfun.com/#organization"
						},
						"potentialAction": {
							"@type": "SearchAction",
							"target": {
								"@type": "EntryPoint",
								"urlTemplate": "https://www.coffeeandfun.com/search?q={search_term_string}"
							},
							"query-input": "required name=search_term_string"
						}
					},
					{
						"@type": "WebPage",
						"@id": "https://www.coffeeandfun.com/coffee-reviews#webpage",
						"url": "https://www.coffeeandfun.com/coffee-reviews",
						"name": "Coffee Shop Reviews & Rankings",
						"description": "Comprehensive reviews and rankings of coffee shops covering quality, atmosphere, service, food, seating, value, and workability.",
						"isPartOf": {
							"@id": "https://www.coffeeandfun.com/#website"
						},
						"about": {
							"@type": "Thing",
							"name": "Coffee Shop Reviews"
						},
