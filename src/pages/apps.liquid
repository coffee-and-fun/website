        <section class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 pb-16 overflow-visible">
            <!-- Sketch: squiggly decoration left of grid -->
            <div class="sketch-note" style="top: 8%; left: -1%;">
                <svg width="16" height="60" viewBox="0 0 16 60">
                    <path d="M8 2 C2 10, 14 18, 8 26 C2 34, 14 42, 8 50 C4 56, 10 58, 8 58" class="sketch-squiggle"/>
