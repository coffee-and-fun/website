                <button class="filter-tab" data-filter="Web">Web</button>
                <button class="filter-tab" data-filter="Chrome">Chrome</button>
                <button class="filter-tab" data-filter="Safari">Safari</button>
                <button class="filter-tab" data-filter="macOS">macOS</button>
                <button class="filter-tab" data-filter="iOS">iOS</button>
                <button class="filter-tab" data-filter="Open Source">Open Source</button>
            </div>
