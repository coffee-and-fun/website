                <svg width="16" height="14" viewBox="0 0 24 22">
                    <path d="M12 21 C12 21, 2 14, 2 7 C2 3, 5 1, 8 2 C10 3, 11 5, 12 6 C13 5, 14 3, 16 2 C19 1, 22 3, 22 7 C22 14, 12 21, 12 21 Z" class="sketch-heart-filled"/>
                </svg>
            </div>

            <!-- Sketch: checkmark floating mid-right -->
            <div class="sketch-note sketch-wiggle" style="top: 42%; right: -1%; --sketch-rotate: 5deg;">
                <svg width="18" height="16" viewBox="0 0 22 20">
                    <path d="M3 10 L9 16 L19 4" class="sketch-check"/>
                </svg>
            </div>

            <!-- Sketch: leaf mid-left -->
            <div class="sketch-note" style="top: 55%; left: -1%; transform: rotate(-15deg);">
                <svg width="18" height="22" viewBox="0 0 24 28">
                    <path d="M12 2 C4 8, 2 18, 12 26 C22 18, 20 8, 12 2 Z" class="sketch-leaf"/>
                    <path d="M12 6 L12 22" class="sketch-leaf"/>
                </svg>
            </div>

            <!-- Sketch: dashed horizontal line -->
            <div class="sketch-note" style="top: 70%; right: 3%;">
                <svg width="60" height="6" viewBox="0 0 60 6">
                    <path d="M0 3 L60 3" class="sketch-dash"/>
                </svg>
            </div>

            <!-- Sketch: exclamation mark -->
            <div class="sketch-note" style="top: 30%; left: -1%;">
                <svg width="8" height="22" viewBox="0 0 10 24">
                    <path d="M5 2 L5 16" class="sketch-exclaim"/>
                    <circle cx="5" cy="22" r="2" fill="#fd6155" opacity="0.4"/>
                </svg>
            </div>
            <div class="not-prose grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-3" id="appGrid">
                {% for app in apps.apps %}
                <a class="app-card card card-compact bg-base-100 shadow-md transition-all duration-200 hover:-translate-y-1 hover:shadow-xl rounded-2xl focus:outline-none focus:ring-2 focus:ring-offset-2 overflow-hidden"
                    style="--tw-ring-color: #a36942;"
                    href="{{ app.link }}"
                    {% if app.link contains 'http' %}target="_blank" rel="noopener noreferrer"{% endif %}
                    data-title="{{ app.name | downcase }}"
                    data-description="{{ app.description | downcase }}"
                    data-platforms="{{ app.platform | join: ' ' | downcase }}">
                    <figure class="px-4 pt-4 pb-1">
                        <img loading="lazy" decoding="async"
                            src="{{ app.image }}"
                            width="600" height="400"
                            class="rounded-xl w-full aspect-video object-cover bg-stone-100"
                            alt="{{ app.name }}" />
                    </figure>
                    <div class="card-body">
                        <h2 class="card-title text-stone-800">{{ app.name }}</h2>
                        <p class="text-sm text-stone-500 line-clamp-2">{{ app.description }}</p>
                        <div class="flex flex-wrap gap-1.5 mt-3">
                            {% for platform in app.platform %}
                            <span class="text-xs font-medium px-2.5 py-1 rounded-full border border-stone-200 text-stone-500">{{ platform }}</span>
                            {% endfor %}
                        </div>
                    </div>
                </a>
                {% endfor %}
            </div>

            <!-- No Results -->
            <div id="noResults" class="hidden text-center py-16">
                <p class="text-2xl mb-2">No Apps Found</p>
                <p class="text-stone-400">Try a different search or filter</p>
            </div>
        </section>

        <!-- Open Source Section -->
        <section class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 pb-16 overflow-visible">
            <!-- Sketch: "free & open!" with arrow -->
            <div class="sketch-note text-lg sm:text-xl" style="top: -10px; right: 5%; transform: rotate(-4deg);">
                free & open!
                <svg width="45" height="40" style="bottom: -36px; left: 15px;">
                    <path d="M22 2 C18 14, 10 22, 6 35" class="sketch-arrow"/>
                    <path d="M0 30 L6 37 L12 30" class="sketch-arrow"/>
                </svg>
            </div>

            <!-- Sketch: sparkle burst left of heading -->
            <div class="sketch-note" style="top: 2%; left: 2%;">
                <svg width="22" height="22" viewBox="0 0 22 22">
                    <path d="M11 2 L11 20" class="sketch-sparkle"/>
                    <path d="M2 11 L20 11" class="sketch-sparkle"/>
                    <path d="M4 4 L18 18" class="sketch-sparkle"/>
                    <path d="M18 4 L4 18" class="sketch-sparkle"/>
                </svg>
            </div>

            <!-- Sketch: coffee cup near heading -->
            <div class="sketch-note" style="top: -2%; left: 18%; transform: rotate(8deg);">
                <svg width="22" height="26" viewBox="0 0 28 32">
                    <path d="M4 10 L4 26 C4 28 6 30 10 30 L18 30 C22 30 24 28 24 26 L24 10" class="sketch-arrow" style="opacity: 0.3;"/>
                    <path d="M24 14 C28 14, 28 22, 24 22" class="sketch-arrow" style="opacity: 0.3;"/>
                    <path d="M10 6 C10 2, 12 0, 12 0" class="sketch-arrow" style="opacity: 0.15;"/>
                    <path d="M16 4 C16 0, 18 -2, 18 -2" class="sketch-arrow" style="opacity: 0.15;"/>
                </svg>
            </div>

            <h2 class="text-xl sm:text-2xl font-bold text-stone-800 mb-8">Open Source</h2>
            <div class="not-prose grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-3" id="opensourceGrid">
                {% for app in apps.opensource %}
                <a class="app-card card card-compact bg-base-100 shadow-md transition-all duration-200 hover:-translate-y-1 hover:shadow-xl rounded-2xl focus:outline-none focus:ring-2 focus:ring-offset-2 overflow-hidden"
                    style="--tw-ring-color: #a36942;"
                    href="{{ app.link }}"
                    target="_blank" rel="noopener noreferrer"
                    data-title="{{ app.name | downcase }}"
                    data-description="{{ app.description | downcase }}"
                    data-platforms="open source">
                    <figure class="px-4 pt-4 pb-1">
                        <img loading="lazy" decoding="async"
                            src="{{ app.image }}"
                            width="600" height="400"
                            class="rounded-xl w-full aspect-video object-cover bg-stone-100"
                            alt="{{ app.name }}" />
                    </figure>
                    <div class="card-body">
                        <h2 class="card-title text-stone-800">{{ app.name }}</h2>
                        <p class="text-sm text-stone-500 line-clamp-2">{{ app.description }}</p>
                        <div class="flex flex-wrap gap-1.5 mt-3">
                            {% for platform in app.platform %}
                            <span class="text-xs font-medium px-2.5 py-1 rounded-full border border-stone-200 text-stone-500">{{ platform }}</span>
                            {% endfor %}
                        </div>
