                        :key="'trending-' + index"
                        class="card bg-gradient-to-r from-primary/10 to-secondary/10 border border-primary/20 shadow-sm headline-card fade-in cursor-pointer"
                        @click="openArticle(article.link)"
                        :style="{ animationDelay: (index * 0.1) + 's' }"
                    >
                        <div class="card-body p-4">
