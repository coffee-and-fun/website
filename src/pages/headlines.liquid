                        'Reddit Baseball': { score: 74, badge: 'üì∞' },
                        'Reddit Gaming': { score: 71, badge: 'üì∞' },
                        'Demo': { score: 100, badge: '‚ú®' }
                    }
                };
            },
            computed: {
                availableCategories() {
                    const categories = ['all', ...new Set(this.allArticles.map(a => a.category))];
                    return categories.filter(cat => cat); // Remove any undefined categories
                },
                filteredArticles() {
                    let articles = this.selectedCategory === 'all' 
                        ? this.allArticles 
                        : this.allArticles.filter(article => article.category === this.selectedCategory);
                    
                    // Add computed properties to each article
                    return articles.map(article => ({
                        ...article,
                        relativeTime: this.getRelativeTime(article.publishedAt),
                        readTime: this.estimateReadTime(article.headline),
                        credibility: this.getSourceCredibility(article.source),
                        isPopular: this.isPopularArticle(article),
                        isTrending: this.isTrendingArticle(article)
                    })).sort((a, b) => {
                        // Sort by trending first, then popular, then by date
                        if (a.isTrending && !b.isTrending) return -1;
                        if (!a.isTrending && b.isTrending) return 1;
                        if (a.isPopular && !b.isPopular) return -1;
                        if (!a.isPopular && b.isPopular) return 1;
                        return new Date(b.publishedAt) - new Date(a.publishedAt);
                    });
                },
                trendingArticles() {
                    return this.filteredArticles.filter(a => a.isTrending).slice(0, 3);
                },
                popularArticles() {
                    return this.filteredArticles.filter(a => a.isPopular).slice(0, 5);
                }
            },
            mounted() {
                this.fetchNews();
            },
            methods: {
                async fetchNews() {
                    this.isLoading = true;
                    this.error = null;
                    
                    try {
                        // Load from your local JSON file
                        const response = await fetch('../news.json');
                        
                        if (!response.ok) {
                            throw new Error(`Failed to load news data: ${response.status} ${response.statusText}`);
                        }
                        
                        this.allArticles = await response.json();
                        
                        if (!Array.isArray(this.allArticles)) {
                            throw new Error('Invalid news data format');
                        }
                        
                        console.log(`‚úÖ Loaded ${this.allArticles.length} articles`);
                        
                    } catch (err) {
                        this.error = err.message;
                        console.error('Error loading news:', err);
                        
                        // Fallback to demo data if local file fails
                        console.log('üìù Using demo data...');
                        this.allArticles = this.getDemoData();
                    } finally {
                        this.isLoading = false;
                    }
                },
                
                getDemoData() {
                    return [
                        {
                            headline: "Welcome to Just the Headlines!",
                            link: "#",
                            source: "Demo",
                            publishedAt: new Date(Date.now() - 30 * 60 * 1000).toISOString(), // 30 mins ago
