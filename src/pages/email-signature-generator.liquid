          this.isProcessingPayment = true;

          try {
            // Redirect to Stripe Payment Link
            // Make sure to set the redirect URL in Stripe to:
            // https://www.coffeeandfun.com/email-signature-generator/?access_token=sig_premium_a8f3k9m2x7v4
            
            window.location.href = 'https://payments.coffeeandfun.com/b/5kQ14o7Xo3OZ8QCeCH1RC0D';
            
          } catch (error) {
            console.error('Payment error:', error);
            alert('Payment failed. Please try again.');
            this.isProcessingPayment = false;
          }
        },

        grantPremiumAccess() {
          localStorage.setItem('emailSigPremium', 'true');
          this.hasPremiumAccess = true;
        },

        saveData() {
          // Auto-save form data to localStorage
          const dataToSave = {
            formData: this.formData,
            uploadedPhoto: this.uploadedPhoto,
            selectedTemplate: this.selectedTemplate ? this.selectedTemplate.id : 'classic'
          };
          localStorage.setItem('emailSigData', JSON.stringify(dataToSave));
        },

        loadSavedData() {
          // Load saved data from localStorage
          const savedData = localStorage.getItem('emailSigData');
          if (savedData) {
            try {
              const parsed = JSON.parse(savedData);
              
              // Only load saved data if it's not the demo data
              // Check if name is different from demo
              if (parsed.formData && parsed.formData.name !== 'John Doe') {
                this.formData = { ...this.formData, ...parsed.formData };
              }
              
              if (parsed.uploadedPhoto) {
                this.uploadedPhoto = parsed.uploadedPhoto;
              }
              
              if (parsed.selectedTemplate) {
                const template = this.templates.find(t => t.id === parsed.selectedTemplate);
                if (template) {
                  this.selectedTemplate = template;
                }
              }
            } catch (e) {
              console.error('Error loading saved data:', e);
            }
          }
        },

        clearAllData() {
          if (confirm('Are you sure you want to clear all data and start fresh? This cannot be undone.')) {
            // Clear localStorage
            localStorage.removeItem('emailSigData');
            
            // Reset to default values
            this.formData = {
              name: '',
              title: '',
              company: '',
              email: '',
              phone: '',
              website: '',
              address: '',
              department: '',
              pronouns: '',
              timezone: '',
              officeHours: '',
              secondaryEmail: '',
              calendarLink: '',
              social: {
                linkedin: '',
                twitter: '',
                github: '',
                instagram: '',
                facebook: '',
                youtube: '',
                tiktok: '',
                medium: '',
                dribbble: '',
                whatsapp: '',
                telegram: ''
              },
              primaryColor: '#3b82f6',
              textColor: '#1f2937'
            };
            
            this.uploadedPhoto = null;
            this.selectedTemplate = this.templates[0];
            
            // Clear file input
            if (this.$refs.photoInput) {
              this.$refs.photoInput.value = '';
            }
            
            alert('All data cleared! You can start fresh.');
          }
        }
      }
    }).mount('#app');
  </script>
