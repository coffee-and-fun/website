          class="coin-inner"
          type="button"
          aria-label="Flip coin"
          @click="flip"
          @keydown.enter.prevent="flip"
          @keydown.space.prevent="flip"
          @transitionend="onTransitionEnd"
          :style="{ transform: `rotateY(${rotation}deg)` }"
