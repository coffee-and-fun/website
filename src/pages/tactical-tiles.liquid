            isExpanding: false, // NEW: Track expansion animation
            moveHistory: [],
            isShaking: false,
            currentPlayer: "X",
            winner: null,
            isDraw: false,
            winningCombo: [],
            score: { X: 0, O: 0 },
            emojiThemes: [
                { X: "‚ùå", O: "‚≠ï" },
                { X: "üê∂", O: "üê±" },
                { X: "üçï", O: "üçî" },
